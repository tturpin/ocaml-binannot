	rm -rf owz-doc
	mkdir owz-doc
	ocamldoc -I $(PATH_UTILS) -I $(PATH_PARSING)  \
	-I $(PATH_TYPING) -I $(PATH_COMPLETION) -I $(PATH_OWZ) \
	$(PATH_UTILS)*.ml $(PATH_PARSING)*.ml  \
